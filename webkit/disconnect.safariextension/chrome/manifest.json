{
  "name": "Disconnect",
  "version": "3.3.0",
  "description":
      "Stop major third parties and search engines from tracking the webpages you go to and searches you do.",
  "icons": {"48": "48.png", "128": "128.png"},
  "permissions": [
    "chrome://favicon/",
    "contextMenus",
    "cookies",
    "history",
    "idle",
    "notifications",
    "tabs",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*"
  ],
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "activated.png",
    "default_title": "View and manage blocked requests"
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content.js"],
    "run_at": "document_start",
    "all_frames": true
  }]
}
